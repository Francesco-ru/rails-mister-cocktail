<%= @cocktail.name %>
<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to 'Delete dose',
  dose_path(dose),
  method: :delete,
  data: { confirm: "Are you sure?"}
%>
<% end %>
<%= link_to 'Delete Cocktail',
  cocktail_path(@cocktail.id),
  method: :delete,
  data: { confirm: "Are you sure?"}
%>
<%= link_to 'add doses', new_cocktail_dose_path(@cocktail.id) %>

